<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".A4aActivity"
    android:background="@drawable/grad_back">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="273dp"
        android:layout_height="543dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="140dp"
        android:layout_marginEnd="68dp"
        android:background="@drawable/a4a_int_lay"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.565"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <Button
            android:id="@+id/idBtnNwt"
            android:layout_width="165dp"
            android:layout_height="50dp"
            android:layout_marginStart="136dp"
            android:layout_marginTop="58dp"
            android:layout_marginEnd="137dp"
            android:background="@drawable/custom_button"
            android:onClick="BtSave"
            android:text="Button"
            android:textColor="#FFFFFF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/idTvalor" />

        <EditText
            android:id="@+id/idTvalor"
            android:layout_width="215dp"
            android:layout_height="37dp"
            android:layout_marginStart="75dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="71dp"
            android:background="@drawable/stroke_text"
            android:ems="10"
            android:hint="@string/Txt_VlTorneo"
            android:inputType="textPersonName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/idTliga" />

        <EditText
            android:id="@+id/idNtorneo"
            android:layout_width="215dp"
            android:layout_height="37dp"
            android:layout_marginStart="75dp"
            android:layout_marginTop="60dp"
            android:layout_marginEnd="71dp"
            android:background="@drawable/stroke_text"
            android:ems="10"
            android:hint="@string/Txt_NmTorneo"
            android:inputType="textPersonName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/idTliga"
            android:layout_width="215dp"
            android:layout_height="37dp"
            android:layout_marginStart="75dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="71dp"
            android:background="@drawable/stroke_text"
            android:ems="10"
            android:hint="@string/Txt_LgTorneo"
            android:inputType="textPersonName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/idTcategoria" />

        <EditText
            android:id="@+id/idTcategoria"
            android:layout_width="215dp"
            android:layout_height="37dp"
            android:layout_marginStart="75dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="71dp"
            android:background="@drawable/stroke_text"
            android:ems="10"
            android:hint="@string/Txt_CtTorneo"
            android:inputType="textPersonName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/idNtorneo" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="96dp"
        android:layout_height="111dp"
        android:layout_marginStart="340dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/imgcup" />

</androidx.constraintlayout.widget.ConstraintLayout>